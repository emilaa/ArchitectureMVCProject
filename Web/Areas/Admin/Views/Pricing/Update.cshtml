@using Core.Constants
@using Web.Areas.Admin.ViewModels.Pricing;
@model PricingUpdateVM;


<div class="container ">
    <h4>Pricing Update</h4>
    <form method="post">
        <div class="col-6 mx-auto">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubTitle"></label>
                <input class="form-control" asp-for="SubTitle" />
                <span class="text-danger" asp-validation-for="SubTitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="Features"></label>
                <textarea class="form-control" asp-for="Features"></textarea>
                <span class="text-danger" asp-validation-for="Features"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input class="form-control" asp-for="Price" />
                <span asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiveStatus"></label>
                <select class="form-control" asp-for="ActiveStatus" asp-items="@Html.GetEnumSelectList<ActiveStatus>()"></select>
                <span asp-validation-for="ActiveStatus"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePer"></label>
                <select class="form-control" asp-for="PricePer" asp-items="@Html.GetEnumSelectList<PricePer>()"></select>
                <span asp-validation-for="PricePer"></span>
            </div>

            <div class="pt-2">
                <button class="btn btn-outline-success">Update</button>
                <a class="btn btn-outline-danger" asp-action="index" asp-controller="pricing">Cancel</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#Features'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
    }
