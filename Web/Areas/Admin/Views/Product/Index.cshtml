@using Web.Areas.Admin.ViewModels.Product;
@model ProductIndexVM;


<h4>Products </h4>
<div>
    <a asp-action="create" asp-controller="product" asp-area="admin" class="btn btn-outline-success mb-3">Create</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Photo</th>
            <th scope="col">Title</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Created At</th>
            <th scope="col">Modified At</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var product in Model.Products)
            {
                    <tr>
                        <td>@product.Id</td>
                        <td><img style="width:120px;height:130px" src="~/assets/images/@product.Photoname" /></td>
                        <td>@product.Title</td>
                        <td>@product.Quantity</td>
                        <td>@product.Price</td>
                        <td>@product.Category.Title</td>
                        <td>@product.CreatedAt</td>
                        <td>
                            @{
                            if (@product.ModifiedAt.ToString() == "01.01.0001 00:00:00")
                            {
                                        <p>Non Modified</p>
                            }
                            else
                            {
                                        @product.ModifiedAt
                            }
                            }
                        </td>
                        <td>
                            <form method="post" class="d-flex gap-4">
                                <a asp-action="update" asp-controller="product" asp-area="admin" asp-route-id="@product.Id" class="btn btn-outline-warning">Update</a>
                                <button type="submit" class="btn btn-outline-danger mx-2" asp-action="delete" asp-controller="product" asp-area="admin" asp-route-id="@product.Id">Delete</button>
                            </form>
                        </td>
                    </tr>
            }
        }
    </tbody>
</table>
