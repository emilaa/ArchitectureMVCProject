@using Web.ViewModels.Account;
@model AccountLoginVM;
@{
    var returnUrl = Context.Request.Query["returnUrl"];
    ViewBag.Title = "Login";

}
<!-- main starts -->
<main>
    <!-- main-frame section starts -->
    <section class="main-frame-2 no-select" style="background: url('/assets/images/cart-frame.jpg');">
        <div class="main-frame-2-title">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-12">
                        <div class="main-frame-2-title-text custom-title-text">
                            Login
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="main-frame-2-breadcrumb">
                            Home / Login
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- main-frame section ends -->
    <!-- product-table section starts -->
    <section class="login my-5 no-select">
        <div class="container">
            <div class="row">
                <div class="col-4 mx-auto">
                    <form method="post" class="login-form">
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input autocomplete="off" class="form-control" asp-for="Username">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input class="form-control" asp-for="Password">
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group d-flex justify-content-center">
                            <button class="btn btn-primary">Login</button>
                        </div>
                        <div class="form-group d-flex justify-content-center">
                            <div>
                                <span>Don't have account yet?</span> <a asp-action="register" asp-controller="account">Register now</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- product-table section ends -->


</main>
<!-- main ends -->